<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <Button
            android:id="@+id/button_open"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开串口"
            android:layout_weight="1"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="30dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/button_write"
            android:text="串口发送数据"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="30dp"
            />

        <Button
            android:id="@+id/button_clear"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="30dp"
            android:text="清空"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="622dp"
            tools:layout_editor_absoluteY="17dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">
        <Button
            android:id="@+id/button_websocket"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="30dp"
            android:text="小门禁连接"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="622dp"
            tools:layout_editor_absoluteY="17dp" />
        <Button
            android:id="@+id/button_websocketclose"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="30dp"
            android:text="小门禁关闭"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="622dp"
            tools:layout_editor_absoluteY="17dp" />
        <Button
            android:id="@+id/button_websocket1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="30dp"
            android:text="背夹连接"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="622dp"
            tools:layout_editor_absoluteY="17dp" />
        <Button
            android:id="@+id/button_websocketclose1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="30dp"
            android:text="背夹关闭"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="622dp"
            tools:layout_editor_absoluteY="17dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_read"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:gravity="top|center"
            android:hint="接收数据"
            android:textSize="15dp">

        </TextView>

        <TextView
            android:id="@+id/text_write"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:gravity="top|center"
            android:hint="发送数据"
            android:textSize="15dp">

        </TextView>

        <TextView
            android:id="@+id/text_receive"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="top|center"
            android:hint="网口数据"
            android:textSize="15dp">

        </TextView>
        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top|center"
            />
    </LinearLayout>


</LinearLayout>